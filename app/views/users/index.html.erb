<h1> All Alpha Bloggers</h1>

<% @users.each do |user| %>
  <ul>
    <li><%= link_to gravatar_for(user), user_path(user) %></li>
    <li>
      <%= link_to user.username, user_path(user) %>
    </li>
    <li>
        <small> <%= pluralize(user.articles.count, "article") if user.articles %> </small>
        <% if logged_in and current_user.admin? %>
          <li>
            <%= link_to "Delete this user", user_path(user), method: :delete,
            data: {confirm: "Are you sure you want to delete this user and all their articles?"} %>
          </li>
        <% end %>
    </li>
  </ul>
<% end %>
